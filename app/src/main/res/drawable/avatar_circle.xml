<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <rotate
        android:fromDegrees="-90"
        android:toDegrees="90" >
      <shape
          android:shape="ring"
          android:thickness="4dp"
          android:useLevel="false">
        <gradient
            android:angle="135"
            android:endColor="#3896d8"
            android:centerColor="#3395a5"
            android:startColor="#3896d8"
            android:type="sweep" />
      </shape>
    </rotate>
  </item>
  <item
      android:drawable="@drawable/triangle"
      android:bottom="2dp"
      android:left="40dp"
      android:right="40dp"
      android:gravity="bottom"
      />

</layer-list>