<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:color="@color/white" android:state_pressed="true">
    <shape>
      <solid android:color="@color/grey_fog_normal" />
      <stroke android:width="1dp" android:color="#19ffffff" />
      <corners android:radius="4dp" />
      <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
    </shape>
  </item>
  <item android:color="@color/grey_fog_normal">
    <shape>
      <solid android:color="#19ffffff" />
      <stroke android:width="1dp" android:color="@color/grey_fog_normal" />
      <corners android:radius="4dp" />
      <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
    </shape>
  </item>
</selector>