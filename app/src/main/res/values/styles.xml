<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="actionModeBackground">@drawable/splash_screen</item>
    <item name="colorPrimary">#0078ab</item>
    <item name="colorAccent">#0078ab</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="windowActionBar">false</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="colorControlNormal">#fff</item>
    <item name="editTextStyle">@style/EditText</item>
    <item name="android:textColorHint">#C6B8B8</item>
    <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    <item name="android:spinnerDropDownItemStyle">@style/Spinner.Dropdown</item>
    <item name="colorPrimaryDark">#006294</item>
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="actionButtonStyle">@style/Widget.Aptoide.AppCompat.ActionButton</item>
  </style>

  <style name="DialogTheme">
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:windowTitleStyle">@style/RtlOverlay.DialogWindowTitle.AppCompat</item>
    <item name="android:windowBackground">@drawable/dialog_bg</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    <item name="android:windowMinWidthMajor">384dp</item>
    <item name="android:windowMinWidthMinor">296dp</item>
    <item name="android:textColor">@color/dark_blue</item>

    <item name="windowActionBar">false</item>
    <item name="windowActionModeOverlay">true</item>

    <item name="android:listDivider">@null</item>

    <item name="android:buttonBarStyle">@style/Widget.AppCompat.ButtonBar.AlertDialog</item>
    <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    <item name="android:windowCloseOnTouchOutside">true</item>
  </style>

  <style name="SpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
    <item name="android:textColor">#fff</item>
  </style>

  <style name="Spinner.Dropdown" parent="Widget.AppCompat.DropDownItem.Spinner">
    <item name="android:textColor">@android:color/black</item>
  </style>


  <style name="Widget.Aptoide.AppCompat.ActionButton" parent="Widget.AppCompat.ActionButton">
    <item name="textAllCaps">false</item>
  </style>

  <style name="menu_style" parent="ThemeOverlay.AppCompat.Light">
    <item name="colorAccent">@android:color/black</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="text_view_clickable">
    <item name="android:background">@drawable/text_view_selectable</item>
    <item name="android:padding">10dp</item>
  </style>

  <style name="EditText" parent="Base.Widget.AppCompat.EditText">
    <item name="android:textColor">?attr/colorPrimary</item>
    <item name="android:background">@drawable/btn_toggle_on_normal_holo_light</item>
    <item name="android:textSize">16dp</item>
  </style>


  <style name="Widget.ActionButton.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow" tools:targetApi="11">
    <item name="android:src">@android:drawable/ic_menu_sort_by_size</item>
  </style>

  <style name="teste" parent="Theme.AppCompat">
    <item name="colorPrimaryDark">#FF0</item>
    <item name="android:textColorSecondary">#FF0</item>
    <item name="colorAccent">#F0F</item>
    <item name="android:textColor">#00F</item>
  </style>

  <style name="TextViewCustom">
    <item name="android:layout_marginTop">30dp</item>
    <item name="android:layout_marginLeft">@dimen/sideMarginTitle</item>
    <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    <item name="android:textColor">?attr/colorPrimary</item>
  </style>

  <style name="SignUpTheme" parent="AppTheme">

    <item name="colorAccent">#FFFFFF</item>
  </style>

  <style name="RepoDialog" parent="Theme.AppCompat.Light.Dialog">
    <item name="android:textColor">#009cb8</item>
    <item name="editTextStyle">@style/EditTextDialog</item>
    <item name="colorAccent">#009cb8</item>
  </style>

  <style name="ConfirmationDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="android:textColor">#33adff</item>
  </style>

  <style name="EditTextDialog" parent="Base.Widget.AppCompat.EditText">

    <item name="android:textColor">@android:color/black</item>
    <item name="colorAccent">#FF9cb8</item>
    <item name="colorPrimary">#009cb8</item>
    <item name="android:paddingLeft">10dp</item>
  </style>

  <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="EditTextWhite">
    <item name="android:background">@drawable/background_edit_text_transparent</item>
    <item name="android:textColorHint">@color/white</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="RadioButton">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
    <item name="cornerSize">50%</item>
  </style>
</resources>
