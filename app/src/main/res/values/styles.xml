<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->

    <item name="actionModeBackground">@drawable/gradient_drawable</item>
    <item name="colorPrimary">#0078ab</item>
    <item name="colorAccent">#0078ab</item>
    <item name="android:textColor">@android:color/white</item>
    <!--<item name="colorAccent">#0078ab</item>-->
    <item name="windowActionBar">false</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="colorControlNormal">#fff</item>
    <item name="editTextStyle">@style/EditText</item>

    <!--<item name="android:spinnerStyle">@style/Spinner</item>-->
    <!--<item name="android:spinnerStyle">@style/uploader_spinner_theme</item>-->

    <item name="android:textColorHint">#C6B8B8</item>


    <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    <item name="android:spinnerDropDownItemStyle">@style/Spinner.Dropdown</item>


    <!--<item name="android:navigationBarColor">#FF0078ab</item>-->
    <item name="colorPrimaryDark">#006294</item>

    <item name="android:windowBackground">@drawable/gradient_drawable</item>
    <item name="actionButtonStyle">@style/Widget.Aptoide.AppCompat.ActionButton</item>
    <!--<item name="android:background">@drawable/gradient_drawable</item>-->

  </style>

  <style name="SpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
    <item name="android:textColor">#fff</item>
  </style>

  <style name="Spinner.Dropdown" parent="Widget.AppCompat.DropDownItem.Spinner">
    <item name="android:textColor">@android:color/black</item>
  </style>


  <style name="Widget.Aptoide.AppCompat.ActionButton" parent="Widget.AppCompat.ActionButton">
    <item name="textAllCaps">false</item>
  </style>

  <style name="menu_style" parent="ThemeOverlay.AppCompat.Light">
    <item name="colorAccent">@android:color/black</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="text_view_clickable">
    <item name="android:background">@drawable/text_view_selectable</item>
    <item name="android:padding">10dp</item>
  </style>
